# Database Configuration (Windows)
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/recon_db

# Redis Configuration (Windows)
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_TITLE=Recon API
API_VERSION=1.0.0
API_DESCRIPTION=Subdomain reconnaissance and screenshot capture API

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8000"]

# File Storage (Windows path)
JOBS_DIRECTORY=./jobs

# Tool Paths (Windows - if tools are in PATH, keep as is)
# If tools are in specific folders, use full path like: C:/tools/subfinder.exe
SUBFINDER_PATH=subfinder
AMASS_PATH=amass
ASSETFINDER_PATH=assetfinder
HTTPX_PATH=httpx
HTTPROBE_PATH=httprobe
ANEW_PATH=anew
GOWITNESS_PATH=gowitness

# Tool Timeouts (in seconds)
SUBFINDER_TIMEOUT=600
AMASS_TIMEOUT=1200
ASSETFINDER_TIMEOUT=300
HTTPX_TIMEOUT=900
HTTPROBE_TIMEOUT=600
GOWITNESS_TIMEOUT=1800
